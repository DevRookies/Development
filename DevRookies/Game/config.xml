<!-- Config file for the game -->

<config>
  <app>
    <title>Fire and Ice</title>
    <organization>UPC - DevRookies</organization>
  </app>
	
  <render>
    <vsync value="true"/>
    <camera x="0" y="0" speed="2"/>
  </render>

  <window>
    <resolution width="1280" height="960" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <scene>
    <tile_name>platforms1.tmx</tile_name>
	  <lvl1_music_name>spaghetti_guitar_in_space.ogg</lvl1_music_name>
    <player x="40" y="130"/>
    <camera x="0" y="0" />    
  </scene>

  <scene2>
    <tile_name>platforms2.tmx</tile_name>
	  <lvl2_music_name>Escape.ogg</lvl2_music_name>
    <player x="40" y="100"/>
    <camera x="0" y="0" />
  </scene2>
  
  <audio>
    <default_music_fade_time value="2.0"/>
    <volume value="128"/>
	  <volume_change_ratio value="25"/>
	  <music> 
      <folder>audio/music/</folder>
    </music>
   	<sfx> 
      <folder>audio/fx/</folder>
    </sfx>
  </audio>

  <player>
    <texture>textures/character.png</texture>
    <speed x="0" y="0"/>
    <acceleration x="0.8f" y="0.4f"/>
    <max_speed x="4" y="4"/>
    <jump_speed value="1"/>
    <max_jump_speed value="70"/>
    <jump_fx_name source="Jump.wav"/>
    <dead_fx_name source="negative_beeps.wav"/>
  </player>
  
  <map>
    <folder>maps/</folder>
    <parallax_speed value="2.0f"/>
  </map>

</config>